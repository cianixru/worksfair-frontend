{
  "name": "worksfair",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "axios": "^0.19.0",
    "body-parser": "^1.19.0",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "lerna": "^3.15.0",
    "nodemailer": "^6.3.0",
    "vhost": "^3.0.2"
  },
  "devDependencies": {
    "eslint": "^6.3.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.18.2",
    "express-pino-logger": "^4.0.0",
    "node-env-run": "^3.0.2",
    "nodemon": "^1.19.1",
    "npm-run-all": "^4.1.5",
    "pino-colada": "^1.4.4"
  },
  "scripts": {
    "dev:home": "cd packages/home-app && yarn dev",
    "dev:webpage": "cd packages/webpage-app && yarn dev",
    "test:home": "cd packages/home-app && yarn test",
    "test:webpage": "cd packages/webpage-app && yarn test",
    "test": "lerna run test --stream",
    "dev": "lerna run dev --parallel",
    "build": "lerna bootstrap && lerna run build",
    "start": "node server.js",
    "cov": "lerna run cov --stream",
    "server-dev": "node-env-run index.js --exec nodemon | pino-colada",
    "dev-server": "run-p dev:home dev:webpage",
    "bootstrap": "lerna bootstrap"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:5000"
}
